                            <MudButton Class="transition-all duration-300 border btn-crud rounded-md btn text-danger border-danger hover:bg-danger hover:text-white" OnClick="CloseAddOrUpdateModal">Huỷ</MudButton>
                            <MudButton Class="transition-all duration-300 border btn-crud rounded-md btn text-purple border-purple hover:bg-purple hover:text-white"
                                       OnClick="OnValidSubmit">Lưu</MudButton>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
